rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Project images - anyone can read, only admins can write
    match /projects/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // General uploads - only admins can read and write
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
